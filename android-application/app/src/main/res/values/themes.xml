<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FplAnalytics" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Fragment" parent="Theme.FplAnalytics">
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.Button" parent="Theme.FplAnalytics">
        <item name="android:textColor">@color/primaryTextColor</item>
        <!--<item name="android:background">@drawable/my_button_style</item>-->
        <item name="android:radius">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.FplAnalytics.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TextView" parent="Theme.FplAnalytics">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FplAnalytics.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FplAnalytics.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>